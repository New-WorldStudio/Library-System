<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.mapper.LibraryCardMapper">
    
    <resultMap type="LibraryCard" id="LibraryCardResult">
        <result property="id"    column="id"    />
        <result property="cardNo"    column="card_no"    />
        <result property="userId"    column="user_id"    />
        <result property="cardTypeId"    column="card_type_id"    />
        <result property="status"    column="status"    />
        <result property="issueDate"    column="issue_date"    />
        <result property="expireDate"    column="expire_date"    />
        <result property="balance"    column="balance"    />
        <result property="borrowLimit"    column="borrow_limit"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="LibraryCardLibraryCardTypeResult" type="LibraryCard" extends="LibraryCardResult">
        <collection property="libraryCardTypeList" ofType="LibraryCardType" column="id" select="selectLibraryCardTypeList" />
    </resultMap>

    <resultMap type="LibraryCardType" id="LibraryCardTypeResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="macBorrowCount"    column="mac_borrow_count"    />
        <result property="needDeposit"    column="need_deposit"    />
        <result property="depositAmount"    column="deposit_amount"    />
        <result property="description"    column="description"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLibraryCardVo">
        select id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark from library_card
    </sql>

    <select id="selectLibraryCardList" parameterType="LibraryCard" resultMap="LibraryCardResult">
        <include refid="selectLibraryCardVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="cardTypeId != null "> and card_type_id = #{cardTypeId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="issueDate != null "> and issue_date = #{issueDate}</if>
            <if test="expireDate != null "> and expire_date = #{expireDate}</if>
            <if test="balance != null "> and balance = #{balance}</if>
            <if test="borrowLimit != null "> and borrow_limit = #{borrowLimit}</if>
        </where>
    </select>
    
    <select id="selectLibraryCardById" parameterType="Long" resultMap="LibraryCardLibraryCardTypeResult">
        select id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark
        from library_card
        where id = #{id}
    </select>

    <select id="selectLibraryCardTypeList" resultMap="LibraryCardTypeResult">
        select id, code, name, mac_borrow_count, need_deposit, deposit_amount, description, create_by, create_time, update_by, update_time, remark
        from library_card_type
        where id = #{id}
    </select>

    <insert id="insertLibraryCard" parameterType="LibraryCard" useGeneratedKeys="true" keyProperty="id">
        insert into library_card
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cardNo != null">card_no,</if>
            <if test="userId != null">user_id,</if>
            <if test="cardTypeId != null">card_type_id,</if>
            <if test="status != null">status,</if>
            <if test="issueDate != null">issue_date,</if>
            <if test="expireDate != null">expire_date,</if>
            <if test="balance != null">balance,</if>
            <if test="borrowLimit != null">borrow_limit,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cardNo != null">#{cardNo},</if>
            <if test="userId != null">#{userId},</if>
            <if test="cardTypeId != null">#{cardTypeId},</if>
            <if test="status != null">#{status},</if>
            <if test="issueDate != null">#{issueDate},</if>
            <if test="expireDate != null">#{expireDate},</if>
            <if test="balance != null">#{balance},</if>
            <if test="borrowLimit != null">#{borrowLimit},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLibraryCard" parameterType="LibraryCard">
        update library_card
        <trim prefix="SET" suffixOverrides=",">
            <if test="cardNo != null">card_no = #{cardNo},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="cardTypeId != null">card_type_id = #{cardTypeId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="issueDate != null">issue_date = #{issueDate},</if>
            <if test="expireDate != null">expire_date = #{expireDate},</if>
            <if test="balance != null">balance = #{balance},</if>
            <if test="borrowLimit != null">borrow_limit = #{borrowLimit},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLibraryCardById" parameterType="Long">
        delete from library_card where id = #{id}
    </delete>

    <delete id="deleteLibraryCardByIds" parameterType="String">
        delete from library_card where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteLibraryCardTypeByIds" parameterType="String">
        delete from library_card_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteLibraryCardTypeById" parameterType="Long">
        delete from library_card_type where id = #{id}
    </delete>

    <insert id="batchLibraryCardType">
        insert into library_card_type( id, code, name, mac_borrow_count, need_deposit, deposit_amount, description, create_by, create_time, update_by, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.code}, #{item.name}, #{item.macBorrowCount}, #{item.needDeposit}, #{item.depositAmount}, #{item.description}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>
</mapper>