<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.mapper.LibraryCarStatusLogMapper">
    
    <resultMap type="LibraryCarStatusLog" id="LibraryCarStatusLogResult">
        <result property="id"    column="id"    />
        <result property="carId"    column="car_id"    />
        <result property="oldStatus"    column="old_status"    />
        <result property="newStatus"    column="new_status"    />
        <result property="reason"    column="reason"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="LibraryCarStatusLogLibraryCardResult" type="LibraryCarStatusLog" extends="LibraryCarStatusLogResult">
        <collection property="libraryCardList" ofType="LibraryCard" column="id" select="selectLibraryCardList" />
    </resultMap>

    <resultMap type="LibraryCard" id="LibraryCardResult">
        <result property="id"    column="id"    />
        <result property="cardNo"    column="card_no"    />
        <result property="userId"    column="user_id"    />
        <result property="cardTypeId"    column="card_type_id"    />
        <result property="status"    column="status"    />
        <result property="issueDate"    column="issue_date"    />
        <result property="expireDate"    column="expire_date"    />
        <result property="balance"    column="balance"    />
        <result property="borrowLimit"    column="borrow_limit"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLibraryCarStatusLogVo">
        select id, car_id, old_status, new_status, reason, create_by, create_time, update_by, update_time, remark from library_car_status_log
    </sql>

    <select id="selectLibraryCarStatusLogList" parameterType="LibraryCarStatusLog" resultMap="LibraryCarStatusLogResult">
        <include refid="selectLibraryCarStatusLogVo"/>
        <where>  
            <if test="carId != null "> and car_id = #{carId}</if>
            <if test="oldStatus != null "> and old_status = #{oldStatus}</if>
            <if test="newStatus != null "> and new_status = #{newStatus}</if>
            <if test="reason != null  and reason != ''"> and reason = #{reason}</if>
        </where>
    </select>
    
    <select id="selectLibraryCarStatusLogById" parameterType="Long" resultMap="LibraryCarStatusLogLibraryCardResult">
        select id, car_id, old_status, new_status, reason, create_by, create_time, update_by, update_time, remark
        from library_car_status_log
        where id = #{id}
    </select>

    <select id="selectLibraryCardList" resultMap="LibraryCardResult">
        select id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark
        from library_card
        where id = #{id}
    </select>

    <insert id="insertLibraryCarStatusLog" parameterType="LibraryCarStatusLog" useGeneratedKeys="true" keyProperty="id">
        insert into library_car_status_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carId != null">car_id,</if>
            <if test="oldStatus != null">old_status,</if>
            <if test="newStatus != null">new_status,</if>
            <if test="reason != null">reason,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carId != null">#{carId},</if>
            <if test="oldStatus != null">#{oldStatus},</if>
            <if test="newStatus != null">#{newStatus},</if>
            <if test="reason != null">#{reason},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLibraryCarStatusLog" parameterType="LibraryCarStatusLog">
        update library_car_status_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="carId != null">car_id = #{carId},</if>
            <if test="oldStatus != null">old_status = #{oldStatus},</if>
            <if test="newStatus != null">new_status = #{newStatus},</if>
            <if test="reason != null">reason = #{reason},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLibraryCarStatusLogById" parameterType="Long">
        delete from library_car_status_log where id = #{id}
    </delete>

    <delete id="deleteLibraryCarStatusLogByIds" parameterType="String">
        delete from library_car_status_log where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteLibraryCardByIds" parameterType="String">
        delete from library_card where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteLibraryCardById" parameterType="Long">
        delete from library_card where id = #{id}
    </delete>

    <insert id="batchLibraryCard">
        insert into library_card( id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.cardNo}, #{item.userId}, #{item.cardTypeId}, #{item.status}, #{item.issueDate}, #{item.expireDate}, #{item.balance}, #{item.borrowLimit}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>
</mapper>