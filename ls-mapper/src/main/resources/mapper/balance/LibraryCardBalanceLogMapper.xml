<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.mapper.LibraryCardBalanceLogMapper">
    
    <resultMap type="LibraryCardBalanceLog" id="LibraryCardBalanceLogResult">
        <result property="id"    column="id"    />
        <result property="cardId"    column="card_id"    />
        <result property="changeAmount"    column="change_amount"    />
        <result property="balanceAfter"    column="balance_after"    />
        <result property="type"    column="type"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="LibraryCardBalanceLogLibraryCardResult" type="LibraryCardBalanceLog" extends="LibraryCardBalanceLogResult">
        <collection property="libraryCardList" ofType="LibraryCard" column="id" select="selectLibraryCardList" />
    </resultMap>

    <resultMap type="LibraryCard" id="LibraryCardResult">
        <result property="id"    column="id"    />
        <result property="cardNo"    column="card_no"    />
        <result property="userId"    column="user_id"    />
        <result property="cardTypeId"    column="card_type_id"    />
        <result property="status"    column="status"    />
        <result property="issueDate"    column="issue_date"    />
        <result property="expireDate"    column="expire_date"    />
        <result property="balance"    column="balance"    />
        <result property="borrowLimit"    column="borrow_limit"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLibraryCardBalanceLogVo">
        select id, card_id, change_amount, balance_after, type, create_by, create_time, update_by, update_time, remark from library_card_balance_log
    </sql>

    <select id="selectLibraryCardBalanceLogList" parameterType="LibraryCardBalanceLog" resultMap="LibraryCardBalanceLogResult">
        <include refid="selectLibraryCardBalanceLogVo"/>
        <where>  
            <if test="cardId != null "> and card_id = #{cardId}</if>
            <if test="changeAmount != null "> and change_amount = #{changeAmount}</if>
            <if test="balanceAfter != null "> and balance_after = #{balanceAfter}</if>
            <if test="type != null "> and type = #{type}</if>
        </where>
    </select>
    
    <select id="selectLibraryCardBalanceLogById" parameterType="Long" resultMap="LibraryCardBalanceLogLibraryCardResult">
        select id, card_id, change_amount, balance_after, type, create_by, create_time, update_by, update_time, remark
        from library_card_balance_log
        where id = #{id}
    </select>

    <select id="selectLibraryCardList" resultMap="LibraryCardResult">
        select id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark
        from library_card
        where id = #{id}
    </select>

    <insert id="insertLibraryCardBalanceLog" parameterType="LibraryCardBalanceLog" useGeneratedKeys="true" keyProperty="id">
        insert into library_card_balance_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cardId != null">card_id,</if>
            <if test="changeAmount != null">change_amount,</if>
            <if test="balanceAfter != null">balance_after,</if>
            <if test="type != null">type,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cardId != null">#{cardId},</if>
            <if test="changeAmount != null">#{changeAmount},</if>
            <if test="balanceAfter != null">#{balanceAfter},</if>
            <if test="type != null">#{type},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLibraryCardBalanceLog" parameterType="LibraryCardBalanceLog">
        update library_card_balance_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="cardId != null">card_id = #{cardId},</if>
            <if test="changeAmount != null">change_amount = #{changeAmount},</if>
            <if test="balanceAfter != null">balance_after = #{balanceAfter},</if>
            <if test="type != null">type = #{type},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLibraryCardBalanceLogById" parameterType="Long">
        delete from library_card_balance_log where id = #{id}
    </delete>

    <delete id="deleteLibraryCardBalanceLogByIds" parameterType="String">
        delete from library_card_balance_log where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteLibraryCardByIds" parameterType="String">
        delete from library_card where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteLibraryCardById" parameterType="Long">
        delete from library_card where id = #{id}
    </delete>

    <insert id="batchLibraryCard">
        insert into library_card( id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.cardNo}, #{item.userId}, #{item.cardTypeId}, #{item.status}, #{item.issueDate}, #{item.expireDate}, #{item.balance}, #{item.borrowLimit}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>
</mapper>