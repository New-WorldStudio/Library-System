<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.mapper.LibraryCardTypeMapper">
    
    <resultMap type="LibraryCardType" id="LibraryCardTypeResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="macBorrowCount"    column="mac_borrow_count"    />
        <result property="needDeposit"    column="need_deposit"    />
        <result property="depositAmount"    column="deposit_amount"    />
        <result property="description"    column="description"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLibraryCardTypeVo">
        select id, code, name, mac_borrow_count, need_deposit, deposit_amount, description, create_by, create_time, update_by, update_time, remark from library_card_type
    </sql>

    <select id="selectLibraryCardTypeList" parameterType="LibraryCardType" resultMap="LibraryCardTypeResult">
        <include refid="selectLibraryCardTypeVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="macBorrowCount != null "> and mac_borrow_count = #{macBorrowCount}</if>
            <if test="needDeposit != null "> and need_deposit = #{needDeposit}</if>
            <if test="depositAmount != null "> and deposit_amount = #{depositAmount}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
        </where>
    </select>
    
    <select id="selectLibraryCardTypeById" parameterType="Long" resultMap="LibraryCardTypeResult">
        <include refid="selectLibraryCardTypeVo"/>
        where id = #{id}
    </select>

    <insert id="insertLibraryCardType" parameterType="LibraryCardType">
        insert into library_card_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="macBorrowCount != null">mac_borrow_count,</if>
            <if test="needDeposit != null">need_deposit,</if>
            <if test="depositAmount != null">deposit_amount,</if>
            <if test="description != null">description,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="code != null">#{code},</if>
            <if test="name != null">#{name},</if>
            <if test="macBorrowCount != null">#{macBorrowCount},</if>
            <if test="needDeposit != null">#{needDeposit},</if>
            <if test="depositAmount != null">#{depositAmount},</if>
            <if test="description != null">#{description},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLibraryCardType" parameterType="LibraryCardType">
        update library_card_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null">code = #{code},</if>
            <if test="name != null">name = #{name},</if>
            <if test="macBorrowCount != null">mac_borrow_count = #{macBorrowCount},</if>
            <if test="needDeposit != null">need_deposit = #{needDeposit},</if>
            <if test="depositAmount != null">deposit_amount = #{depositAmount},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLibraryCardTypeById" parameterType="Long">
        delete from library_card_type where id = #{id}
    </delete>

    <delete id="deleteLibraryCardTypeByIds" parameterType="String">
        delete from library_card_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>