<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.mapper.LibraryCardApplicationMapper">
    
    <resultMap type="LibraryCardApplication" id="LibraryCardApplicationResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="cardTypeId"    column="card_type_id"    />
        <result property="status"    column="status"    />
        <result property="reviewBy"    column="review_by"    />
        <result property="reviewAt"    column="review_at"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <resultMap id="LibraryCardApplicationLibraryCardResult" type="LibraryCardApplication" extends="LibraryCardApplicationResult">
        <collection property="libraryCardList" ofType="LibraryCard" column="id" select="selectLibraryCardList" />
    </resultMap>

    <resultMap type="LibraryCard" id="LibraryCardResult">
        <result property="id"    column="id"    />
        <result property="cardNo"    column="card_no"    />
        <result property="userId"    column="user_id"    />
        <result property="cardTypeId"    column="card_type_id"    />
        <result property="status"    column="status"    />
        <result property="issueDate"    column="issue_date"    />
        <result property="expireDate"    column="expire_date"    />
        <result property="balance"    column="balance"    />
        <result property="borrowLimit"    column="borrow_limit"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectLibraryCardApplicationVo">
        select id, user_id, card_type_id, status, review_by, review_at, create_by, create_time, update_by, update_time, remark from library_card_application
    </sql>

    <select id="selectLibraryCardApplicationList" parameterType="LibraryCardApplication" resultMap="LibraryCardApplicationResult">
        <include refid="selectLibraryCardApplicationVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="cardTypeId != null "> and card_type_id = #{cardTypeId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="reviewBy != null "> and review_by = #{reviewBy}</if>
            <if test="reviewAt != null "> and review_at = #{reviewAt}</if>
        </where>
    </select>
    
    <select id="selectLibraryCardApplicationById" parameterType="Long" resultMap="LibraryCardApplicationLibraryCardResult">
        select id, user_id, card_type_id, status, review_by, review_at, create_by, create_time, update_by, update_time, remark
        from library_card_application
        where id = #{id}
    </select>

    <select id="selectLibraryCardList" resultMap="LibraryCardResult">
        select id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark
        from library_card
        where id = #{id}
    </select>

    <insert id="insertLibraryCardApplication" parameterType="LibraryCardApplication" useGeneratedKeys="true" keyProperty="id">
        insert into library_card_application
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="cardTypeId != null">card_type_id,</if>
            <if test="status != null">status,</if>
            <if test="reviewBy != null">review_by,</if>
            <if test="reviewAt != null">review_at,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="cardTypeId != null">#{cardTypeId},</if>
            <if test="status != null">#{status},</if>
            <if test="reviewBy != null">#{reviewBy},</if>
            <if test="reviewAt != null">#{reviewAt},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateLibraryCardApplication" parameterType="LibraryCardApplication">
        update library_card_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="cardTypeId != null">card_type_id = #{cardTypeId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="reviewBy != null">review_by = #{reviewBy},</if>
            <if test="reviewAt != null">review_at = #{reviewAt},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLibraryCardApplicationById" parameterType="Long">
        delete from library_card_application where id = #{id}
    </delete>

    <delete id="deleteLibraryCardApplicationByIds" parameterType="String">
        delete from library_card_application where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <delete id="deleteLibraryCardByIds" parameterType="String">
        delete from library_card where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteLibraryCardById" parameterType="Long">
        delete from library_card where id = #{id}
    </delete>

    <insert id="batchLibraryCard">
        insert into library_card( id, card_no, user_id, card_type_id, status, issue_date, expire_date, balance, borrow_limit, create_by, create_time, update_by, update_time, remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.id}, #{item.cardNo}, #{item.userId}, #{item.cardTypeId}, #{item.status}, #{item.issueDate}, #{item.expireDate}, #{item.balance}, #{item.borrowLimit}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>
</mapper>